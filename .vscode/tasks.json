{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",

    "tasks": [
        {
            "label": "Far MSBuild",
            "type": "process",
            "command": "${workspaceFolder}\\misc\\vsdevcmd.cmd",
            "args": [
                "&",
                "msbuild",
                "${workspaceFolder}\\thirdparty\\Farmanager\\_build\\vc\\all.sln",
                "/t:Far\\Far",
                "/p:Configuration=${input:buildType}",
                "/p:Platform=${input:platform}"
            ],
            "group": {
                "kind": "build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "clear": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Install Spotifar to Far",
            "type": "shell",
            "options": {
                "env": {
                    "dest_folder": "${workspaceFolder}\\thirdparty\\FarManager\\_build\\vc\\_output\\product\\${input:buildType}.${input:platform}\\Plugins\\Spotifar\\",
                    "target_folder": "${workspaceFolder}\\build\\${input:toolchain}-${input:platform}\\bin\\${input:buildType}\\"
                }
            },
            "command": "cmd",
            "args": [
                "/C",
                {
                    "value": "if not exist \"%dest_folder%\" mklink /J \"%dest_folder%\" \"%target_folder%\"",
                    "quoting": "weak"
                }
            ],
            "dependsOn": [
                "Create Spotifar plugin folder"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Create Spotifar plugin folder",
            "type": "shell",
            "hide": true,
            "options": {
                "env": {
                    "plugin_folder": "${workspaceFolder}\\thirdparty\\FarManager\\_build\\vc\\_output\\product\\${input:buildType}.${input:platform}\\Plugins\\"
                }
            },
            "command": "cmd",
            "args": [
                "/C",
                {
                    "value": "if not exist \"%plugin_folder%\" mkdir \"%plugin_folder%\"",
                    "quoting": "weak"
                }
            ],
            "group": {
                "kind": "build"
            }
        }
    ],
    "inputs": [
        {
            "id": "platform",
            "type": "pickString",
            "description": "Select a platform",
            "options": [
                "x64",
                "x86"
            ],
            "default": "x64"
        },
        {
            "id": "buildType",
            "type": "pickString",
            "description": "Select a build type",
            "options": [
                "Release",
                "Debug"
            ],
            "default": "Debug"
        },
        {
            "id": "toolchain",
            "type": "pickString",
            "description": "Select a Toolchain type",
            "options": [
                "vs17",
                "clang"
            ],
            "default": "vs17"
        }
    ]
}
