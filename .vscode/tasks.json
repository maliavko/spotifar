{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",

    "tasks": [
        {
            "label": "Far MSBuild",
            "type": "process",
            "command": "${workspaceFolder}\\misc\\vsdevcmd.cmd",
            "args": [
                "&",
                "msbuild",
                "${workspaceFolder}\\thirdparty\\Farmanager\\_build\\vc\\all.sln",
                "/t:Far\\Far",
                "/p:Configuration=${input:buildType}",
                "/p:Platform=${input:platform}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "clear": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Far Msys2/Clang64",
            "type": "process",
            "command": "mingw32-make",
            "args": [
                "-f",
                "makefile_gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/thirdparty/Farmanager/far",
                "env": {
                    "CLANG": "1"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "clear": true
            },
            "problemMatcher": "$gcc"
        }
    ],
    "inputs": [
        {
            "id": "platform",
            "type": "pickString",
            "description": "Select a platform",
            "options": [
                "x64",
                "x86"
            ],
            "default": "x64"
        },
        {
            "id": "buildType",
            "type": "pickString",
            "description": "Select a build type",
            "options": [
                "Release",
                "Debug"
            ],
            "default": "Debug"
        },
        {
            "id": "toolchain",
            "type": "pickString",
            "description": "Select a Toolchain type",
            "options": [
                "vs17",
                "clang"
            ],
            "default": "vs17"
        }
    ]
}
